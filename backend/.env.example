# API bind
API_HOST=127.0.0.1
API_PORT=5000

# Public frontend origin (CORS)
PUBLIC_ORIGIN=https://totalcode.indevs.in
# Optional additional CORS origins, comma-separated
CORS_ORIGINS=

# Upload size limit (MB) for generic routes.
# Effective global cap is auto-raised to BACKUP_MAX_FILE_MB when backup is enabled.
MAX_CONTENT_LENGTH_MB=10

# Optional Google Drive settings
GOOGLE_DRIVE_FOLDER_ID=
GOOGLE_CREDENTIALS_FILE=oauth_credentials.json
GOOGLE_TOKEN_FILE=token.pickle

# Google token verification for backup API
GOOGLE_OAUTH_WEB_CLIENT_ID=

# Backup storage settings
BACKUP_STORAGE_DIR=backup_storage
BACKUP_MAX_FILE_MB=250
BACKUP_MAX_UNCOMPRESSED_MB=700
BACKUP_SCHEMA_VERSION=1
